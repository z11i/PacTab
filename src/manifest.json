{
    "manifest_version": 2,
    "version": "0.1.0",
    "name": "PacTab",
    "short_name": "PacTab",
    "description": "Browser extension to open links in the same tab by URL match patterns.",
    "homepage_url": "https://github.com/z11i/PacTab",
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "js/background.bundle.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true,
        "chrome_style": true
    }
}